<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundCoverImageViewUser" parent="">
        <item name="cornerSizeTopLeft">@dimen/dp_10</item>
        <item name="cornerSizeTopRight">@dimen/dp_10</item>
        <item name="color">@color/white</item>

    </style>
    <style name="roundImageViewUser" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="roundImagePost" parent="">
        <item name="color">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_10</item>
    </style>

    <style name="guideLineHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="guideLineVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ThemeButtonColorToggle" parent="AppTheme">
        <item name="colorPrimary">@color/gray_300</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="colorOnPrimarySurface">@color/blue_700</item>
    </style>

</resources>
